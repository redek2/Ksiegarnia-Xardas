@model księgarnia_Xardas.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<h2>Delete Book</h2>

<h3>Are you sure you want to delete this book?</h3>

<!-- Tabela z jedną linią danych książki -->
<table class="table table-dark table-striped table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Genre</th>
            <th>Copies Available</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Title</td>
            <td>@Model.Author</td>
            <td>@Model.Genre</td>
            <td>@Model.CopiesAvailable</td>
        </tr>
    </tbody>
</table>

<!-- Przyciski Delete i Cancel, wyśrodkowane -->
<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex justify-content-center gap-3">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>