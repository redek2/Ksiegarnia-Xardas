@model IEnumerable<UserRegistrationReport>

<h1>User Registration Report </h1>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th class="text-danger">User Id</th>
            <th class="text-danger">Email</th>
            <th class="text-danger">Registration date</th>
            <th class="text-danger">Email verified</th>
            <th class="text-danger">Phone number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td class="text-danger">@user.UserId</td>
                <td class="text-danger">@user.Email</td>
                <td class="text-danger">@(user.RegistrationDate.HasValue ? user.RegistrationDate.Value.ToString("dd-MM-yyyy HH:mm:ss") : "No data")</td>
                <td class="text-danger">@user.EmailConfirmed</td>
                <td class="text-danger">@user.PhoneNumber</td>
            </tr>
        }
    </tbody>
</table>
